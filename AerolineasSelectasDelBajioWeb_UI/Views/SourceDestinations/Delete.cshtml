@model AerolineasSelectasDelBajioWeb_Entities.SourceDestiny

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro que deseas eliminar el registro?</h3>
<div>
    <h4>SourceDestiny</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SourceDestinyFromNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SourceDestinyFromNavigation.CityName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SourceDestinyToNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SourceDestinyToNavigation.CityName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SourceDestinyId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
